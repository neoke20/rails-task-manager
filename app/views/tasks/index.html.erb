<div class="container">
<h1>My tasks</h1>
<% @tasks.each do |task| %>
  <% if task.completed %>
  <p><i class="fas fa-check-square"></i> <%= link_to task.title, task_path(task) %></p>
  <% else %>
  <p><i class="fas fa-stop"></i> <%= link_to task.title, task_path(task) %></p>
  <% end %>
<% end %>
<hr>
<%= link_to 'ðŸ“„ Create a task', new_task_path %>
</div>

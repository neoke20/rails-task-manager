<div class="container">
  <h1>Edit <%= @task.title %></h1>
  <%= form_for(@task) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="form-group">
      <%= f.label :details %>
      <%= f.text_area :details %>
    </div>
    <div class="form-group form-check">
      <%= f.check_box :completed %>
      <%= f.label :completed, "Mark as complete" %>
    </div>
    <%= f.submit 'Update Task', :class => 'btn btn-primary' %>
  <% end %>
  <hr>
  <%= link_to '⏮ back to list', tasks_path %>
</div>

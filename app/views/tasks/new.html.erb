<div class="container">
  <h1>Add a Task</h1>
  <%= form_for(@task) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="form-group">
      <%= f.label :details %>
      <%= f.text_area :details %>
    </div>
    <%= f.submit 'Create Task', :class => 'btn btn-primary' %>
  <% end %>
  <hr>
  <%= link_to '⏮ back to list', tasks_path %>
</div>

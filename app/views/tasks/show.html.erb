<div class="container">
  <div class="d-flex justify-content-between mt-3">
    <h1><%= @task.title %></h1>
    <%= link_to 'Edit task', edit_path, :class => 'btn btn-primary' %>
  </div>
  <div class="alert alert-secondary mt-3" role="alert">
    <%= @task.details %>
  </div>
  <% if @task.completed %>
    <p><i class="fas fa-check-square"></i> This taks is completed</p>
  <% else %>
    <p><i class="fas fa-stop"></i> This task is not completed yet</p>
  <% end %>
  <%= link_to 'Back to list', index_path %>
</div>

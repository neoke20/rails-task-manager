<div class="container">
  <h1><%= @task.title %></h1>
  <div class="alert alert-secondary" role="alert">
    <%= @task.details %>
  </div>
  <% if @task.completed %>
    <p><i class="fas fa-check-square"></i> This taks is completed</p>
  <% else %>
    <p><i class="fas fa-stop"></i> This task is not completed yet</p>
  <% end %>
  <%= link_to 'Back to list', index_path %>
</div>
